<mujoco model="solo12">
  <compiler angle="radian" meshdir="core/solo12/assets/meshes/" fusestatic="false"/>

  <default>
    <default class="visual">
      <geom group="2" type="mesh" contype="0" conaffinity="0"/>
    </default>
    <default class="collision">
      <geom group="3" type="mesh"/>
    </default>
    <default class="affine">
      <!-- TODO: Tweak these -->
      <position kp="15" ctrlrange="-3.14 3.14" forcerange="-10 10"/>
    </default>
    <joint type="hinge" damping="1" frictionloss="0.1"/>
  </default>
  
  <!-- Collision / visual meshes used during the simulation -->
  <asset>
    <include file="core/solo12/assets/meshes.xml"/>
    <include file="core/solo12/assets/materials.xml"/>
  </asset>

  <!-- Inertial parameters converted to principal axes by MuJoCo compiler -->
  <worldbody>
    <!-- Robot base -->
    <body name="base_link">
      <joint type="free"/>
      <inertial pos="-0.00082966 1.05e-06 -0.0006021" quat="-0.00116678 0.706653 0.00115432 0.707559" mass="1.25124" diaginertia="0.0160537 0.0138852 0.00266206"/>
      <include file="core/solo12/assets/meshes/solo_12_base/solo_12_base.xml"/>

      <!-- Front left shoulder  -->
      <body name="FL_SHOULDER" pos="0.2141 0.0875 0">
        <inertial pos="-0.0940725 -0.00438935 1.384e-05" quat="0.525393 0.524526 0.474075 0.473379" mass="0.14196" diaginertia="0.000386433 0.0003805 2.42272e-05"/>
        <joint name="FL_HAA" pos="0 0 0" axis="1 0 0" range="-10 10"/>
        <include_with_attrs from="meshes/solo12_hip_fe/solo12_hip_fe.xml"/>

        <!-- Front left upper leg -->
        <body name="FL_UPPER_LEG" pos="-0.0195 0.014 0">
          <inertial pos="1.53e-05 0.0176764 -0.0783823" quat="0.705254 -0.0412383 0.0411345 0.706558" mass="0.147373" diaginertia="0.000421743 0.0004154 2.44467e-05"/>
          <joint name="FL_HFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
          <include_with_attrs from="meshes/solo_upper_leg/solo_upper_leg.xml"/>
          
          <!-- Front left lower leg -->
          <body name="FL_LOWER_LEG" pos="0 0.03745 -0.16">
            <inertial pos="0 0.00776716 -0.0700388" quat="0.707057 -0.00837059 0.00837059 0.707057" mass="0.0231829" diaginertia="8.58474e-05 8.508e-05 1.34264e-06"/>
            <joint name="FL_KFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
            <include_with_attrs from="meshes/solo_lower_leg_v2/solo_lower_leg_v2.xml"/>

            <!-- Front left foot pose -->
            <body name="FL_FOOT" pos="0 0.009 -0.16">
              <inertial pos="0 0 0" mass="0" diaginertia="0 0 0"/>
            </body>
          </body>
        </body>
      </body>

      <!-- Front right shoulder  -->
      <body name="FR_SHOULDER" pos="0.2141 -0.0875 0">
        <inertial pos="-0.0940725 0.00438935 -1.384e-05" quat="0.474075 0.473379 0.525393 0.524526" mass="0.14196" diaginertia="0.000386433 0.0003805 2.42272e-05"/>
        <joint name="FR_HAA" pos="0 0 0" axis="1 0 0" range="-10 10"/>
        
        <include_with_attrs from="meshes/solo12_hip_fe/solo12_hip_fe.xml" euler="-3.1415 0.0 0.0"/>
        <geom material="pla_grey" mesh="hip_adapter" pos="-0.1875 0.0 0.0" class="visual"/>

        <!-- Front right upper leg -->
        <body name="FR_UPPER_LEG" pos="-0.0195 -0.014 0">
          <inertial pos="-1.53e-05 -0.0176764 -0.0783823" quat="0.705254 0.0412383 -0.0411345 0.706558" mass="0.147373" diaginertia="0.000421743 0.0004154 2.44467e-05"/>
          <joint name="FR_HFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
          <include_with_attrs from="meshes/solo_upper_leg/solo_upper_leg.xml" euler="0.0 0.0 3.1415"/>

          <!-- Front right lower leg -->
          <body name="FR_LOWER_LEG" pos="0 -0.03745 -0.16">
            <inertial pos="0 -0.00776716 -0.0700388" quat="0.707057 0.00837059 -0.00837059 0.707057" mass="0.0231829" diaginertia="8.58474e-05 8.508e-05 1.34264e-06"/>
            <joint name="FR_KFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
            <include_with_attrs from="meshes/solo_lower_leg_v2/solo_lower_leg_v2.xml" euler="0.0 0.0 3.1415"/>

            <!-- Front right foot pose -->
            <body name="FR_FOOT" pos="0 -0.009 -0.16">
              <inertial pos="0 0 0" mass="0" diaginertia="0 0 0"/>
            </body>
          </body>
        </body>
      </body>

      <!-- Hind left shoulder  -->
      <body name="HL_SHOULDER" pos="-0.2141 0.0875 0">
        <inertial pos="0.0940725 -0.00438935 -1.384e-05" quat="0.473379 0.474075 0.524526 0.525393" mass="0.14196" diaginertia="0.000386433 0.0003805 2.42272e-05"/>
        <joint name="HL_HAA" pos="0 0 0" axis="1 0 0" range="-10 10"/>

        <include_with_attrs from="meshes/solo12_hip_fe/solo12_hip_fe.xml" euler="0.0 -3.1415 0.0"/>
        <geom material="pla_grey" mesh="hip_adapter" pos="0.1875 0.0 0.0" euler="0.0 0.0 3.1415" class="visual"/>

        <!-- Hind left upper leg  -->
        <body name="HL_UPPER_LEG" pos="0.0195 0.014 0">
          <inertial pos="1.53e-05 0.0176764 -0.0783823" quat="0.705254 -0.0412383 0.0411345 0.706558" mass="0.147373" diaginertia="0.000421743 0.0004154 2.44467e-05"/>
          <joint name="HL_HFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
          <include_with_attrs from="meshes/solo_upper_leg/solo_upper_leg.xml"/>

          <!-- Hind left lower leg  -->
          <body name="HL_LOWER_LEG" pos="0 0.03745 -0.16">
            <inertial pos="0 0.00776716 -0.0700388" quat="0.707057 -0.00837059 0.00837059 0.707057" mass="0.0231829" diaginertia="8.58474e-05 8.508e-05 1.34264e-06"/>
            <joint name="HL_KFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
            <include_with_attrs from="meshes/solo_lower_leg_v2/solo_lower_leg_v2.xml"/>

            <!-- Hind left foot pose  -->
            <body name="HL_FOOT" pos="0 0.009 -0.16">
              <inertial pos="0 0 0" mass="0" diaginertia="0 0 0"/>
            </body>
          </body>
        </body>
      </body>

      <!-- Hind right shoulder  -->
      <body name="HR_SHOULDER" pos="-0.2141 -0.0875 0">
        <inertial pos="0.0940725 0.00438935 1.384e-05" quat="0.524526 0.525393 0.473379 0.474075" mass="0.14196" diaginertia="0.000386433 0.0003805 2.42272e-05"/>
        <joint name="HR_HAA" pos="0 0 0" axis="1 0 0" range="-10 10"/>
        <include_with_attrs from="meshes/solo12_hip_fe/solo12_hip_fe.xml" euler="0.0 0.0 3.1415"/>

        <!-- Hind right upper leg  -->
        <body name="HR_UPPER_LEG" pos="0.0195 -0.014 0">
          <inertial pos="-1.53e-05 -0.0176764 -0.0783823" quat="0.705254 0.0412383 -0.0411345 0.706558" mass="0.147373" diaginertia="0.000421743 0.0004154 2.44467e-05"/>
          <joint name="HR_HFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
          <include_with_attrs from="meshes/solo_upper_leg/solo_upper_leg.xml" euler="0.0 0.0 3.1415"/>

          <!-- Hind right lower leg  -->
          <body name="HR_LOWER_LEG" pos="0 -0.03745 -0.16">
            <inertial pos="0 -0.00776716 -0.0700388" quat="0.707057 0.00837059 -0.00837059 0.707057" mass="0.0231829" diaginertia="8.58474e-05 8.508e-05 1.34264e-06"/>
            <joint name="HR_KFE" pos="0 0 0" axis="0 1 0" range="-10 10"/>
            <include_with_attrs from="meshes/solo_lower_leg_v2/solo_lower_leg_v2.xml" euler="0.0 0.0 3.1415"/>

            <!-- Hind right foot pose  -->
            <body name="HR_FOOT" pos="0 -0.009 -0.16">
              <inertial pos="0 0 0" mass="0" diaginertia="0 0 0"/>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <position class="affine" joint="FL_HAA" name="FL_HAA"/>
    <position class="affine" joint="FL_HFE" name="FL_HFE"/>
    <position class="affine" joint="FL_KFE" name="FL_KFE"/>
    <position class="affine" joint="FR_HAA" name="FR_HAA"/>
    <position class="affine" joint="FR_HFE" name="FR_HFE"/>
    <position class="affine" joint="FR_KFE" name="FR_KFE"/>
    <position class="affine" joint="HL_HAA" name="HL_HAA"/>
    <position class="affine" joint="HL_HFE" name="HL_HFE"/>
    <position class="affine" joint="HL_KFE" name="HL_KFE"/>
    <position class="affine" joint="HR_HAA" name="HR_HAA"/>
    <position class="affine" joint="HR_HFE" name="HR_HFE"/>
    <position class="affine" joint="HR_KFE" name="HR_KFE"/>
  </actuator>
  
  <!-- Collision exclusion from SRDF (robot_properties_solo) -->
  <contact>
    <!-- The base should not block shoulder rotation -->
    <exclude body1="FL_SHOULDER" body2="base_link"/>
    <exclude body1="FR_SHOULDER" body2="base_link"/>
    <exclude body1="HL_SHOULDER" body2="base_link"/>
    <exclude body1="HR_SHOULDER" body2="base_link"/>

    <!-- Exclude collisions of adjacent components -->
    <!-- Shoulders and upper legs -->
    <exclude body1="FL_UPPER_LEG" body2="FL_SHOULDER"/>
    <exclude body1="FR_UPPER_LEG" body2="FR_SHOULDER"/>
    <exclude body1="HL_UPPER_LEG" body2="HL_SHOULDER"/>
    <exclude body1="HR_UPPER_LEG" body2="HR_SHOULDER"/>

    <!-- Upper legs and lower legs -->
    <exclude body1="FL_LOWER_LEG" body2="FL_UPPER_LEG"/>
    <exclude body1="FR_LOWER_LEG" body2="FR_UPPER_LEG"/>
    <exclude body1="HL_LOWER_LEG" body2="HL_UPPER_LEG"/>
    <exclude body1="HR_LOWER_LEG" body2="HR_UPPER_LEG"/>
  </contact>
</mujoco>
